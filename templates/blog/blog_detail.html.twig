{% extends 'base.html.twig' %}
{% block title %}FATÄ°H MEHMET{% endblock %}
{% block body %}
    <div class="col-md-8">
        <!-- image -->
        <a href="#!"><img class="card-img-top" src="{{ (asset('uploads/' ~ item.image)) }}" alt="..."/></a>
        <!-- Title -->
        <h1 class="mt-4">{{ item.title }}</h1>
        <hr>
        <!-- Blog Content -->
        {{ item.content|raw}}
        <div class="card my-4" id="reply">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
                <form action="{{ path('add_comment', {slug: item.slug}) }}" method="POST" id="commentForm">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Name Surname" name="name" />
                    </div>
                    <div class="form-group"><textarea class="form-control" placeholder="Comment" name="content" rows="3"></textarea></div>
                    <button class="btn btn-primary float-right" type="submit">Share</button>
                </form>
            </div>
        </div>
        <div>
            {% for message in app.flashes('notice') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        {% for comment in comments %}
        <!-- Single comment-->
            <div class="d-flex">
                <div class="flex-shrink-0"><img class="rounded-circle" src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..." /></div>
                <div class="ms-3">
                    <div class="fw-bold">{{ comment.name }}</div>
                    {{comment.content}}                </div>
            </div>
        {% endfor %}
    </div>



{% endblock %}
