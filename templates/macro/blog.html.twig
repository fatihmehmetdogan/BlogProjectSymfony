{% macro item(blog) %}
        <div class="col-lg-12">
            <!-- Featured blog post-->
            <div class="card mb-4">
                <a href="#!"><img class="card-img-top" src="{{ absolute_url(asset('uploads/' ~ blog.image)) }}" alt="..."/></a>
                <div class="card-body">
                    <h2 class="card-title">{{ blog.title }}</h2>
                    <p class="card-text">{{ blog.content[:100] }}</p>
                    <a class="btn btn-primary" href="{{ path("blog_detail",{slug: blog.slug}) }}">Read more â†’</a>

                    <!-- Date and time-->
                    <p>Posted on <b>{{ blog.getUpdatedAt()|date('M d, Y')}}</b> at <b>{{ blog.getUpdatedAt()|date('H:i')}} </b></p>                </div>
            </div>
        </div>
{% endmacro %}

