    {% if (app.user) and instanceOf(app.user, "App\\Entity\\Member") %}
        <div  style="display:flex; align-items: center;color: white">
            You are logged in as {{ app.user.username }} <a href="{{ path('app_logout') }}" class="btn btn-primary" style="margin-left: 10px">Logout</a>
        </div >
     {% else %}
         <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
             Login
         </button>
    {% endif %}

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Login</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form method="POST" class="m-2" action="/login">
                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                    <label for="inputEmail">Email</label>
                    <input name="email" id="inputEmail" class="form-control" >

                    {%  set errors = app.flashes('errors') %}
                    {% for error in errors %}
                        {% if error.email is defined %}
                            <div class="alert alert-danger">{{ error.email}}</div>
                        {% endif %}
                    {% endfor %}
                    <div class="form-group">

                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" >
                        {%  set errors = app.flashes('errors') %}

                        {% for error in errors %}
                            {% if error.email is defined %}

                            <div class="alert alert-danger">{{ error.password}}</div>
                            {% endif %}

                        {% endfor %}
                    </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}

                    <button class="btn btn-lg btn-primary mt-2 float-right" name="login" value="member" type="submit">
                        Sign in
                    </button>

                </form>
            </div>
        </div>
    </div>
